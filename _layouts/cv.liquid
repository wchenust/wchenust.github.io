---
layout: default
---

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" target="_blank" rel="noopener noreferrer" class="float-right">
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  {% if page.cv_pdf %}
    <!-- Embedding PDF with iframe -->
    <iframe src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}" style="width:100%; height:800px;" frameborder="0"></iframe>
  {% endif %}
</div>
